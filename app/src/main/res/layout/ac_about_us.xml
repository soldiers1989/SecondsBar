<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mall_tool_pl"
                android:text="关于我们"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbar_title_font"/>

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:layout_alignParentLeft="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_back"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_marginTop="44dip"
        android:scaleType="centerCrop"
        android:src="@mipmap/icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <View
        android:id="@+id/v_content"
        android:layout_width="match_parent"
        android:layout_height="190dip"
        android:layout_marginTop="33dip"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"/>

    <View
        android:id="@+id/v_version_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        app:layout_constraintBottom_toTopOf="@+id/v_protocol_line"
        app:layout_constraintTop_toTopOf="@+id/v_content"/>

    <View
        android:id="@+id/v_protocol_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        app:layout_constraintBottom_toTopOf="@+id/v_privacy_line"
        app:layout_constraintTop_toBottomOf="@+id/v_version_line"/>

    <View
        android:id="@+id/v_privacy_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ebebeb"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintTop_toBottomOf="@+id/v_protocol_line"/>

    <TextView
        android:id="@+id/tv_version_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dip"
        android:text="当前版本"
        android:textColor="#2e2e2e"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/v_version_line"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toTopOf="@+id/v_content"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_marginRight="14dip"
        android:drawableRight="@mipmap/ic_arrow_right_gray"
        android:drawablePadding="8dip"
        android:gravity="center_vertical|right"
        android:text="1.0"
        android:textColor="#808080"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/v_version_line"
        app:layout_constraintEnd_toEndOf="@+id/v_version_line"
        app:layout_constraintStart_toEndOf="@+id/tv_version_tips"
        app:layout_constraintTop_toTopOf="@+id/v_content"/>

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:drawableRight="@mipmap/ic_arrow_right_gray"
        android:drawablePadding="8dip"
        android:gravity="center_vertical"
        android:paddingLeft="18dip"
        android:paddingRight="14dip"
        android:text="秒吧用户使用协议"
        android:textColor="#2e2e2e"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/v_protocol_line"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toBottomOf="@+id/v_version_line"/>

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:drawableRight="@mipmap/ic_arrow_right_gray"
        android:drawablePadding="8dip"
        android:gravity="center_vertical"
        android:paddingLeft="18dip"
        android:paddingRight="14dip"
        android:text="秒吧隐私政策"
        android:textColor="#2e2e2e"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/v_privacy_line"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toBottomOf="@+id/v_protocol_line"/>

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:drawableRight="@mipmap/ic_arrow_right_gray"
        android:drawablePadding="8dip"
        android:gravity="center_vertical"
        android:paddingLeft="18dip"
        android:paddingRight="14dip"
        android:text="联系客服"
        android:textColor="#2e2e2e"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toBottomOf="@+id/v_privacy_line"/>

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:gravity="center_horizontal"
        android:text="@string/aboutus_copyright"
        android:textColor="#808080"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_content"/>
</android.support.constraint.ConstraintLayout>